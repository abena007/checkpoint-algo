ALGORITHM checkpoint 4 
VAR
    arr:ARRAY_OF INTEGER [n]
    n,i,j,k : INTEGER
BEGIN
    write("enter the size of the array")
    read(n)
    FOR i FROM 0 TO n-1 STEP 1  DO
        write ("array[",i,"]")
        read(arr[i])   
    END_FOR
    j:=1
    WHILE (j<n-1) DO
    i:=j-1
    k:= arr[j]
        WHILE (i>0 && arr[i]>k)  DO
            arr[i+1]:=arr[i]
            i:=i-1
        END_WHILE
    arr[i+1]:=k
    j:=j+1
    END_WHILE
END